<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.weizj.manger.mapper.SysRoleMapper">

    <!--  映射查询到的字段 -->
    <resultMap id="sysRoleMap" type="xyz.weizj.model.entity.system.SysRole" autoMapping="true"></resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>

    <sql id="findPageWhere">
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like concat('%',#{roleName},'%')
            </if>
            and is_deleted=0
        </where>
    </sql>
    <insert id="saveSysRole">
        insert into sys_role (id,role_name,role_code,description)
        values (#{id},#{roleName},#{roleCode},#{description});
    </insert>
    <update id="updateSysRole">
        update sys_role set
        <if test="roleName != null and roleName != ''">
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''">
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        update_time =  now()
        where
        id = #{id}
    </update>
    <delete id="deleteById">
        update sys_role set is_deleted=1 where id=#{roleId}
    </delete>

    <select id="findByPage" resultType="xyz.weizj.model.entity.system.SysRole">
        select <include refid="columns"/> from sys_role
            <include refid="findPageWhere"/>
        order by id desc
    </select>
    <select id="findAllRoles" resultMap="sysRoleMap">
        select <include refid="columns" />
        from sys_role where is_deleted = 0;
    </select>
</mapper>